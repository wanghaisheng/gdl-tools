<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
	<id>v${project.version}</id>
	<!-- Generates a zip package containing the needed files -->
	<formats>
		<format>zip</format>
	</formats>

	<!-- Adds dependencies to zip package under lib directory -->
	<dependencySets>
		<dependencySet>
			<!-- Project artifact is not copied under library directory since it is 
				added to the root directory of the zip package. -->
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<!-- Adds startup scripts to the root directory of zip package. The startup 
			scripts are located to src/main/scripts directory as stated by Maven conventions. -->
		<fileSet>
			<directory>${project.build.scriptSourceDirectory}</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>startup.*</include>
				<include>gdl-editor.exe</include>
			</includes>
		</fileSet>
		<!-- adds jar package to the root directory of zip package -->
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../docs/gdl-editor</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>user-manual.pdf</include>
				<include>samples.pdf</include>
				<include>release-notes.txt</include>
			</includes>
		</fileSet>
		<!-- add gdl icon -->
		<fileSet>
			<directory>src/main/resources/img</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>gdl.ico</include>
			</includes>
		</fileSet>
		<!-- add archetype folder 
		<fileSet>
			<directory>../cm/archetypes</directory>
			<outputDirectory>Archetypes</outputDirectory>
			<includes>
				<include>*.adl</include>
			</includes>
		</fileSet>-->
		<!-- add templates folder 
		<fileSet>
			<directory>../cm/templates</directory>
			<outputDirectory>Templates</outputDirectory>
			<includes>
				<include>*.oet</include>
			</includes>
		</fileSet>-->
		<!-- add terminologies folder 
		<fileSet>
			<directory>../cm/terminologies</directory>
			<outputDirectory>Terminologies</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>-->
		<!-- add ontologies folder 
		<fileSet>
			<directory>../cm/ontologies</directory>
			<outputDirectory>Ontologies</outputDirectory>
			<includes>
				<include>*.owl</include> 
			</includes>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>-->
		<!-- add guides folder
		<fileSet>
			<directory>../cm/guides</directory>
			<outputDirectory>Guidelines</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet> -->
		<!-- add manual, samples and release notes -->
	</fileSets>
</assembly>